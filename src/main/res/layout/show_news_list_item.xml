<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="如何有效地在海外市场推广产品？"
        android:textSize="16sp"
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:baselineAligned="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/news_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                >
                <TextView
                    android:text="我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容我是新闻的内容"
                    android:id="@+id/news_content"
                    android:layout_width="match_parent"
                    android:gravity="top"
                    android:maxLines="2"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/news_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:paddingTop="8dp"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:text="13分钟前|11次阅读"
                    android:gravity="center_vertical|right"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/news_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="1"
                    android:paddingTop="16dp"
                    android:textColor="#666666"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>